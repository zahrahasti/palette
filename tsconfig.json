{
  "include": [
    "env.d.ts",
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "./**/*",
    "../support/**/*"
  ],

  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "noEmit": true,
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "paths": { "@/*": ["./src/*"] },
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "types": ["vite/client", "node", "cypress"],
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  }
}
